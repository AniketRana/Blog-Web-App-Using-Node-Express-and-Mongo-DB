<%- include('layouts/header'); -%>
<%- include('layouts/nav'); -%>
<img src="../img/formCreation1.jpg" width="100%" alt="">
    <div class="container">
      <style>
        table
        {
          font-size: 15px;
          align-items: center;
          display: table;
          width:35%;
          margin: auto;
          border:0px solid lightblue;
          height:450px;
          box-shadow: 0px 0px  10px 5px #83b2edcc;
          border-radius: 10px;
        }
        tr
        {
          margin: auto;
          padding: 20px 20px;
          align-items: center;
        }
        th
        {
          text-align: right;
          padding-right: 10px;
          font-weight: lighter;
        }
        td
        {
          text-align: left;
          padding-left: 10px;
        }
        .txt
        {
           height: 30px;
           width:300px;
           border-radius:5px;
        }
        .txt:focus
        {
          box-shadow: 0px 0px  10px 5px #83b2edcc;
        }
        textarea:focus
        {
          box-shadow: 0px 0px  10px 5px #83b2edcc;
        }
        td,textarea
        {
          border-radius: 5px;
        }
        button
        {
          margin: 10px 50px;
          padding: 10px 10px;
          background-color: lightblue;
          border:1px solid red;
          border-radius: 10px;
          text-align: center;
        }
        button:hover
        {
          box-shadow: 0px 0px  10px 5px #83b2edcc;
        }
      </style>
        <div class="cards-section">
            <h1><center>Edit blog</center></h1>
          <form action="" method="post" name="myForm" >
            <table>
              <tr><td>
                <br>
              </td></tr>
              <tr>
                
                <th>Blog Title</th>
                <td><input class="txt" type="text" id="blogtitle" name="blogtitle" value="<%= blog.blogtitle %>" /></td>
              </tr>
              <tr>
                <th>Description</th>
                <td><textarea type="textarea" id="description" rows="5" cols="47" name="description" ><%= blog.description %></textarea></td>
              </tr>
              <tr>
                <th>Blog Type</th>
                <td> <select name="type" id="type" class="txt">
                  <option value="">----- Select -----</option>
                  <option <% if(blog.type == 'General'){ %> selected <% } %> value="General">General</option>
                  <option <% if(blog.type == 'Tech'){ %> selected <% } %> value="Tech">Tech</option>
                  <option <% if(blog.type == 'Food'){ %> selected <% } %> value="Food">Food</option>
                  <option <% if(blog.type == 'Political'){ %> selected <% } %> value="Political">Political</option>
                  <option <% if(blog.type == 'History'){ %> selected <% } %> value="History">History</option>
              </select></td>
              </tr>
              <tr>
                <th>Published Date</th>
                <td><input  class="txt" type="text" id="publisheddate" placeholder="eg. 25-10-2021" name="publisheddate" value="<%= blog.publisheddate %>" /></td>
              </tr>
              <tr>
                <th>Author Name</th>
                <td><input  class="txt" type="text" id="authorname" name="authorname" value="<%= blog.authorname %>" /></td>
              </tr>
              <tr>
                <th>Gender</th>
                <td><input type="radio" id="radio1" name="gender" value="Male" <% if(blog.gender == 'Male') { %> checked <% } %>  />Male </br> 
                    <input type="radio" id="radio1" name="gender" value="Female" <% if(blog.gender == 'Female') { %> checked <% } %> />Female </td>
              </tr>
              <tr>
                <td colspan="2" style="height:10px;padding-left:80px;"><button type="submit" value="update"> Update</button>
                </td>
                
              </tr>
              <tr>
                <td colspan="2">
                    <br/><br/>
                        <p id="errors">
                            <% 
                            if (typeof(errors) != 'undefined')
                            {
                                for (let error of errors)
                                {
                            %>
                                <p class="errors"> <%= error.msg %></p>
                            <%
                                }
                            }
                            %>
                        </p>
                </td>
              </tr>
            </table>

          </form>
        </div>        
    </div>
    </div>
<%- include('layouts/footer'); -%>
    