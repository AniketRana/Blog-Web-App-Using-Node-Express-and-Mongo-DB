        <div class="cards-section">
            <h1><center>Details</center></h1>
            <ul class="cards">
                  
                    <li class="cards_item">
                        <div class="card">
                            <div class="card_image">
                                <img src=<%= "../Img/" + blog.img %> alt="">
                            </div>
